{
  "name": "two-easy-engine",
  "version": "0.0.4",
  "description": "A simple 2D library.",
  "files": [
    "dist"
  ],
  "main": "dist/two-easy-engine.umd.js",
  "module": "dist/two-easy-engine.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "vite build --config vite.lib.config.js && tsc && rollup -c rollup.dts.config.js && rm -rf dist/src && cp -r dist/two-easy-engine.js docs/public/demos/two-easy-engine.js",
    "test": "vitest",
    "lint": "eslint src/**/*.js",
    "docs:gen": "sh ./scripts/generate-api-docs.sh",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "gh-pages -d docs/.vitepress/dist"
  },
  "keywords": [
    "2d",
    "canvas",
    "engine",
    "graphics"
  ],
  "author": "Nicolai Berg Andersen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niiicolai/two-easy-engine.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "canvas": "^3.2.0",
    "eslint": "^9.37.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "jsdoc": "^4.0.5",
    "jsdoc-to-markdown": "^9.1.3",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  }
}
